<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/nominas?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">gestor_nominas</property>
    <property name="hibernate.connection.password">nomina2015</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.query.factory_class">org.hibernate.hql.internal.classic.ClassicQueryTranslatorFactory</property>
    <mapping class="nominas/entity/User.java" file="" jar="" package="" resource="nominas/entity/User.hbm.xml"/>
    <mapping class="nominas/entity/Puesto.java" file="" jar="" package="" resource="nominas/entity/Puesto.hbm.xml"/>
    <mapping class="nominas/entity/Departamento.java" file="" jar="" package="" resource="nominas/entity/Departamento.hbm.xml"/>
    <mapping class="nominas/entity/ListaNomina.java" file="" jar="" package="" resource="nominas/entity/ListaNomina.hbm.xml"/>
    <mapping class="nominas/entity/Empleado.java" file="" jar="" package="" resource="nominas/entity/Empleado.hbm.xml"/>
    <mapping class="nominas/entity/Percepcion.java" file="" jar="" package="" resource="nominas/entity/Percepcion.hbm.xml"/>
    <mapping class="nominas/entity/Deduccion.java" file="" jar="" package="" resource="nominas/entity/Deduccion.hbm.xml"/>
    
  </session-factory>
</hibernate-configuration>